<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/create_meeting_city_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        tools:src="@drawable/tokyo_drawable"
        android:layout_margin="16dp"
        android:background="@color/tokyo_color"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ShapeAppearance.M3.Sys.Shape.Corner.Full"
        />

    <TextView
        android:id="@+id/create_meeting_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/alata"
        android:textColor="@color/space_cadet_blue"
        app:layout_constraintBottom_toBottomOf="@id/create_meeting_city_image"
        app:layout_constraintStart_toEndOf="@id/create_meeting_city_image"
        app:layout_constraintTop_toTopOf="@id/create_meeting_city_image"
        tools:text="Tokyo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>